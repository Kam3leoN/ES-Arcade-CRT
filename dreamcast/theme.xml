<!--
theme name:		es-arcade-crt-dreamcast
version:		2.2
author:			AndreaMav
web:			https://github.com/AndreaMav/es-theme-arcade-crt
-->
<theme>
	<formatVersion>4</formatVersion>
	
	

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	

	
		<image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.75</pos>
			<size>0.4 0.13</size>
		</image>

	</view>
	
	<view name="system, basic">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<view name="detailed">
	
	
			<image name="gamelist-matte" extra="true">
                <path>./../_res/images/white.png</path>
                <origin>0 0</origin>
                <pos>0.6 0.3</pos>
                <size>0.4 0.7742</size>
                <tile>false</tile>
            </image>
			
			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.6 0.3</pos>
				<size>0.330 0.600</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			</textlist>
				

			<image name="md_image">
				<pos>0.056 0.49</pos>			
				<origin>0 0</origin>
				<size>0.45 0.42</size>
			</image>

			<image name="md_marquee">
				<pos>0.50 0.18</pos>
				<origin>0 0</origin>
				
				<size>0.45 0.10</size>
			</image>

			<image name="bottom2" extra="true">
				<pos>0.55 0.01</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
				
			</image>


			<image name="background" extra="true">
				<pos>0 0</pos>
				<size>1 1</size>
				<path>./_inc/dreamc_b1l.PNG</path>
				<tile>false</tile>
			</image>

			<text name="md_lbl_rating, md_lbl_playcount, md_playcount, md_publisher, md_lbl_genre, md_lbl_developer, md_lbl_publisher">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

	        <datetime name="md_releasedate, md_lbl_lastplayed, md_lbl_releasedate">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </datetime>

	</view>



<feature supported="video">

		<view name="video">
			<image name="gamelist-matte" extra="true">
                <path>./../_res/images/white.png</path>
                <origin>0 0</origin>
                <pos>0.6 0.3</pos>
                <size>0.4 0.7742</size>
                <tile>false</tile>
            </image>
			
			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.6 0.3</pos>
				<size>0.330 0.600</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			</textlist>
				

			<video name="md_video">
				<pos>0.056 0.49</pos>			
				<origin>0 0</origin>
				<size>0.45 0.42</size>
				<delay>1</delay>
				<default>./../_res/images/static.mp4</default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.50 0.18</pos>
				<origin>0 0</origin>
				
				<size>0.45 0.10</size>
			</image>


			<image name="bottom2" extra="true">
				<pos>0.55 0.01</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
				
			</image>


			<image name="background" extra="true">
				<pos>0 0</pos>
				<size>1 1</size>
				<path>./_inc/dreamc_b1l.PNG</path>
				<tile>false</tile>
			</image>

			<text name="md_lbl_rating, md_lbl_playcount, md_playcount, md_publisher, md_lbl_genre, md_lbl_developer, md_lbl_publisher">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

	        <datetime name="md_releasedate, md_lbl_lastplayed, md_lbl_releasedate">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </datetime>

		</view>

	</feature>

</theme>