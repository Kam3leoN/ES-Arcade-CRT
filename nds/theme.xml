<theme>
	<formatVersion>4</formatVersion>
	

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	

	
		<image name="logo_helper" extra="true">
			<path>./../art/arcand.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.6 0.8</pos>
			<size>0.4 0.20</size>
			
		</image>

	</view>

	
	<view name="system, basic">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<view name="detailed">

		<image name="md_image">
				<pos>0.25 0.299</pos>			
				<origin>0 0</origin>
				<size>0.285 0.505</size>
				</image>

			<image name="md_marquee">
				<pos>0.64 0.06</pos>
				<origin>0 0</origin>
				
				<size>0.33 0.12</size>
			</image>

			
			
			<image name="background" extra="true">
				<pos>0.08 0.25</pos>
				<size>0.60 0.60</size>
				<path>./_inc/ndsbl.png</path>
				<tile>false</tile>
			</image>

			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.69 0.2</pos>
				<size>0.330 0.600</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<fontPath>./../art/piccolo.ttf</fontPath>
			</textlist>

			<image name="bottom2" extra="true">
				<pos>0.60 0.85</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
			</image>

			<text name="developer_label" extra="true">
					<pos>0.180 0.860</pos>
					<text>Developer:</text>
					<color>00ffd9</color>
					<fontPath>./../art/TinyUnicode.ttf</fontPath>
					<forceUppercase>1</forceUppercase>
					<fontSize>0.07</fontSize>
					<size>0.25 0.0333333333333333</size>
				</text>

			<text name="md_developer">
				<color>ffffff</color>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.07</fontSize>
				<pos>0.340 0.860</pos>
				<size>0.25 0.038</size>
			</text>	

