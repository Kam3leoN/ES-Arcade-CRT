<theme>
    <formatVersion>3</formatVersion>
    

	<view name="system">

		
		<image name="logo">
				<path>./art/system.svg</path>
        </image>

        	<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./art/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./art/system.svg</path>
        </image>

        
		<image name="logo_helper" extra="true">
			<path>./../art/andmavlog.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.65 0.75</pos>
			<size>0.4 0.13</size>
		</image>

	</view>

		
	<view name="basic, detailed, video">

		<image name="background" extra="true">
				<pos>-0.10 0.20</pos>
				<size>0.80 0.77</size>
				<path>./art/2600bg.jpg</path>
				<tile>false</tile>
		</image>

		<image name="bottom2" extra="true">
				<pos>0.70 0.03</pos>
				<size>0.280 0.250</size>
				<path>./art/2600cass.jpg</path>
				<tile>false</tile>
				
		</image>
		

		<textlist name="gamelist">
			<selectorColor>db5050</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>969696</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./../art/piccolo.ttf</fontPath>
			<forceUppercase>1</forceUppercase>
			<pos>0.72 0.4</pos>
			<size>0.24 0.550</size>
			<alignment>left</alignment>
			<horizontalMargin>0.00</horizontalMargin>
			<fontSize>0.035</fontSize>
			<scrollSound>./../art/scroll.wav</scrollSound>
		</textlist>

		<text name="rating_label" extra="true">
				<pos>0.70 0.300</pos>
				<text>Rating</text>
				<color>00ffd9</color>
				<fontPath>./../art/TinyUnicode.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<fontSize>0.05</fontSize>
				<size>0.25 0.0333333333333333</size>
		</text>

		<rating name="md_rating">
			<pos>0.70 0.350</pos>
			<size>0.0166666666666667 0.0296296296296296</size>		
			<filledPath>./../art/heart_filled.png</filledPath>
			<unfilledPath>./../art/heart_empty.png</unfilledPath>
			
		</rating>

	</view>


<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.265 0.420</pos>
				<size>0.260 0.270</size>
				<origin>0.5 0.5</origin>			
				<delay>1</delay>
				<default>./../_res/images/static.mp4</default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<origin>0 0</origin>
				<size>0.001 0.001</size>
			</image>

			<image name="logo">
				<path>./art/system.svg</path>
				<pos>0.15 0.070</pos>
				<origin>0.1 0.1</origin>
				<size>0.460 0.110</size>
			</image>

				

		</view>

	</feature>
	
	
</theme>