<!--
theme name:		arcade-crt
website:        https://github.com/AndreaMav/es-theme-arcade-crt
version:		2.1
author:			AndreaMav
-->
<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.4</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	
		<image name="logo_helper" extra="true">
			<path>./../art/arcand.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.6 0.8</pos>
			<size>0.4 0.20</size>
			
		</image>

	
	<view name="system, basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>

		<textlist name="gamelist">
				<selectorColor>001B9D</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<fontPath>./../art/piccolo.ttf</fontPath>
				<fontSize>0.035</fontSize>
		</textlist>

		<rating name="md_rating">
			<filledPath>./../art/invisible.png</filledPath>
			<unfilledPath>./../art/invisible.png</unfilledPath>
		</rating>

		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed,">
			<color>ffffff</color>
			<pos>1 1</pos>
			<forceUppercase>1</forceUppercase>
			<fontPath>./../art/piccolo.ttf</fontPath>
			<fontSize>0.03</fontSize>
		</text>

		
		<text name="md_developer, md_publisher, md_genre, md_players, md_description">
			<color>ffffff</color>
			<pos>1 1</pos>
			<forceUppercase>1</forceUppercase>
			<fontPath>./../art/piccolo.ttf</fontPath>
			<fontSize>0.03</fontSize>
		</text>

	</view>





<feature supported="video, basic, detailed">

		<view name="video">


			<video name="md_video">
				<pos>0.5 0.30</pos>			
				<origin>0 0</origin>
				<size>0.4 0.6</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.48 0.18</pos>
				<origin>0 0</origin>
				<size>0.45 0.10</size>
			</image>


			<image name="bottom2" extra="true">
				<pos>0.55 0.01</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
			</image>
			
			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<fontPath>./../art/piccolo.ttf</fontPath>
			</textlist>
			

		</view>

	</feature>

</theme>