<theme>
	<formatVersion>4</formatVersion>
	
	

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/logosm3.png</path>
		</image>
	

	
		<image name="logo_helper" extra="true">
			<path>./../art/arcand.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.6 0.8</pos>
			<size>0.4 0.20</size>
			
		</image>
	</view>
	
	<view name="system, basic">
		<image name="logo">
			<path>./_inc/logosm3.png</path>
		</image>
	</view>

<view name="detailed">

	<image name="logo">
				<path>./_inc/logosm3.png</path>
				<origin>0 0</origin>
                <pos>0.020 0.015</pos>
			</image>

			<image name="gamelist-matte" extra="true">
                <path>./../_res/images/red.png</path>
                <origin>0 0</origin>
                <pos>0.53 0.27</pos>
                <size>0.4 0.660</size>
                <tile>false</tile>
            </image>
			
			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.55 0.29</pos>
				<size>0.370 0.640</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			</textlist>
				

			<image name="md_image">
				<pos>0.056 0.45</pos>			
				<origin>0 0</origin>
				<size>0.45 0.45</size>
				<delay>1</delay>
				<default>./../_res/images/static.mp4</default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</image>

			<image name="md_marquee">
				<pos>0.056 0.32</pos>
				<origin>0 0</origin>
				<size>0.45 0.12</size>
			</image>

			<image name="bottom1" extra="true">
				<origin>0 0</origin>
                <pos>0.29 0.030</pos>
				<size>0.20 0.23</size>
				<path>./_inc/sr2.jpg</path>
				<tile>false</tile>
				<rotation>-5</rotation>				
			</image>

			<image name="bottom2" extra="true">
				<pos>0.55 0.01</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
				
			</image>


				<text name="md_lbl_rating, md_lbl_playcount, md_playcount, md_publisher, md_lbl_genre, md_lbl_developer, md_lbl_publisher">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

	        <datetime name="md_releasedate, md_lbl_lastplayed, md_lbl_releasedate">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </datetime>
		

	</view>





