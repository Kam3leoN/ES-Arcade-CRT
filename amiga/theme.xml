<theme>
    <formatVersion>3</formatVersion>
    

	<view name="system">

			<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./art/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./art/system.svg</path>
        </image>

        <!-- BOX LOGO  -->
		<image name="logo_helper" extra="true">
			<path>./art/arcand.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.6 0.8</pos>
			<size>0.4 0.20</size>
		</image>
	</view>

	<feature supported="carousel">
      <view name="system">
         <carousel name="systemcarousel">
            <type>horizontal</type>
            <color>1c1c1cdd</color>
         </carousel>
         <text name="systemInfo">
            <backgroundColor>1c1c1cdd</backgroundColor>
            <color>e6f2ff</color>
            <fontPath>./art/Cabin-Bold.ttf</fontPath>
            <!--dim font conteggio giochi-->
            <fontSize>0.045</fontSize>
         </text>
      </view>
   </feature>

	<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.540 0.531</pos>
				<size>0.416 0.449</size>
				<origin>0.1 0.1</origin>			
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			
		</view>

	</feature>

	<view name="video">

		<image name="logo">
			<path>./art/system.svg</path>
			<pos>0.206 0.174</pos>
			<maxSize>0.460 0.126</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<image name="background" extra="true">
				<size>0.95 0.95</size>
				<tile>true</tile>
				<path>./art/wb_bg2.png</path>
				<tile>false</tile>
		</image>

		<textlist name="gamelist">
			<selectorColor>ffffff</selectorColor>
			<selectedColor>f46b42</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.045</fontSize>
			<forceUppercase>1</forceUppercase>
			<pos>0.020 0.375</pos>
			<size>0.400 0.530</size>
			<alignment>left</alignment>
			<horizontalMargin>0.00</horizontalMargin>
			<scrollSound>./../art/scroll.wav</scrollSound>
		</textlist>

		



	</view>

	
	<view name="detailed">

		<image name="logo">
			<path>./art/system.svg</path>
			<pos>0.206 0.174</pos>
			<maxSize>0.460 0.126</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<image name="background" extra="true">
				<size>0.95 0.95</size>
				<tile>true</tile>
				<path>./art/wb_bg2.png</path>
				<tile>false</tile>
		</image>

		<textlist name="gamelist">
			<selectorColor>ffffff</selectorColor>
			<selectedColor>f46b42</selectedColor>
			<primaryColor>ffffff</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.045</fontSize>
			<forceUppercase>1</forceUppercase>
			<pos>0.020 0.375</pos>
			<size>0.400 0.530</size>
			<alignment>left</alignment>
			<horizontalMargin>0.00</horizontalMargin>
			<scrollSound>./../art/scroll.wav</scrollSound>
		</textlist>

			<image name="md_image">
				<pos>0.540 0.531</pos>
				<size>0.416 0.449</size>
				<origin>0.1 0.1</origin>			
			</image>

	</view>


</theme>