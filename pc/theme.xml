<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/wxp.jpeg</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>

		<image name="bottom3" extra="true">
            <path>./../art/zanac_logo.png</path>
            <origin>0.2 0.5</origin>
            <pos>0.2 0.87</pos>
            <size>0.33 0.13</size>
        </image>

		<image name="bottom2" extra="true">
            <path>./../art/myzar.png</path>
            <origin>0.2 0.5</origin>
            <pos>0.1 0.74</pos>
            <size>0.33 0.13</size>
            
        </image>

	</view>
	
	
	<view name="system, basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>


<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.5 0.30</pos>			
				<origin>0 0</origin>
				<size>0.4 0.6</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.48 0.18</pos>
				<origin>0 0</origin>
				<!--<maxSize>1 0.099</maxSize> quasi ok -->
				<size>0.45 0.10</size>
			</image>

			
			<image name="bottom2" extra="true">
				<pos>0.55 0.01</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
			</image>

		<textlist name="gamelist">
				<selectorColor>001B9D</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.030 0.190</pos>
				<size>0.400 0.705</size>
			</textlist>

			

		</view>

	</feature>

</theme>