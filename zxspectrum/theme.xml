<theme>
	<formatVersion>4</formatVersion>
	

	<view name="system">
		<image name="background" extra="true">
				<size>1 0.5</size>
				<tile>true</tile>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
			</image>

		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	
		<image name="logo_helper" extra="true">
			<path>./../art/arcand.png</path>
			<origin>0.2 0.5</origin>
			<pos>0.6 0.8</pos>
			<size>0.4 0.20</size>
			
		</image>

	
	<view name="system">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

<view name="detailed,video,basic">
		
		<image name="md_image">
				<pos>0.5 0.30</pos>			
				<origin>0 0</origin>
				<size>0.4 0.6</size>
		</image>

		<textlist name="gamelist">
				<selectorColor>001B9D</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>ffffff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<forceUppercase>1</forceUppercase>
				<pos>0.030 0.16</pos>
				<size>0.400 0.8</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<lineSpacing>1.35</lineSpacing>
				<fontSize>0.045</fontSize>
				<fontPath>./../_res/fonts/TitilliumWeb-SemiBold.ttf</fontPath>
			</textlist>

			<image name="md_marquee">
				<pos>0.48 0.18</pos>
				<origin>0 0</origin>
				
				<size>0.45 0.10</size>
			</image>

			<image name="bottom2" extra="true">
				<pos>0.55 0.01</pos>
				<size>0.330 0.160</size>
				<path>./../art/arcand.png</path>
				<tile>false</tile>
				
			</image>
			<image name="background" extra="true">
				<pos>0.05 0.45</pos>
				<size>0.38 0.5</size>
				<path>./_inc/system_and.png</path>
				<tile>false</tile>
				<color>ffffff66</color>
			</image>
	</view>




<feature supported="video">

		<view name="video">

			<video name="md_video">
				<pos>0.5 0.30</pos>			
				<origin>0 0</origin>
				<size>0.4 0.6</size>
				<delay>0.2</delay>
				<default></default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>false</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.48 0.18</pos>
				<origin>0 0</origin>
				
				<size>0.45 0.10</size>
			</image>

		</view>

	</feature>

</theme>