			</image>

			
			<textlist name="gamelist">
				<selectorColor>1c1c1c</selectorColor>
				<selectedColor>ffffff</selectedColor>
				<primaryColor>7373ff</primaryColor>
				<secondaryColor>7a6161</secondaryColor>
				<fontPath>./../art/C64.ttf</fontPath>
				<forceUppercase>1</forceUppercase>
				<pos>0.032 0.310</pos>
				<size>0.460 0.500</size>
				<alignment>left</alignment>
				<horizontalMargin>0.00</horizontalMargin>
				<fontSize>0.03</fontSize>
				<scrollSound>./art/scroll.wav</scrollSound>
			</textlist>

			<video name="md_video">
				<pos>0.57 0.35</pos>			
				<origin>0 0</origin>
				<size>0.28 0.40</size>
				<delay>1</delay>
				<default>./../_res/images/static.mp4</default>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
			</video>

			<image name="md_marquee">
				<pos>0.50 0.23</pos>
				<origin>0 0</origin>
				<size>0.40 0.10</size>
			</image>

			<text name="rating_label" extra="true">
					<pos>0.56 0.032</pos>
					<text>@AndreaMav 2020</text>
					<color>0000AA</color>
					<fontPath>./../art/C64.ttf</fontPath>
					<forceUppercase>1</forceUppercase>
					<fontSize>0.03</fontSize>
					<size>0.40 0.008</size>
				</text>

			<text name="md_lbl_rating, md_lbl_playcount, md_playcount, md_lbl_genre, md_lbl_developer, md_lbl_players">

                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </text>

        <datetime name="md_lbl_lastplayed, md_lbl_releasedate, md_players">
                        <fontPath>./../_res/fonts/AdobeBlank.ttf</fontPath>
                        <pos>1 1</pos>
                        <size>0.001 0.001</size>
                    </datetime>

		</view>

	</feature>

</theme>